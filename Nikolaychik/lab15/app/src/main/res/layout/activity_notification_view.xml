<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".NotificationViewActivity">

    <Button
        android:id="@+id/delete_button"
        android:layout_width="304dp"
        android:layout_height="322dp"
        android:onClick="onPerformDeleteClick"
        android:text="Удалить уведомление"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingTop="80dp">

        <TextView
            android:id="@+id/view_titleText"
            android:layout_width="146dp"
            android:layout_height="36dp"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/title" />

        <TextView
            android:id="@+id/view_textValue"
            android:layout_width="151dp"
            android:layout_height="64dp"
            android:ems="10"
            android:gravity="fill_horizontal"
            android:hint="@string/textValue" />

        <TextView
            android:id="@+id/view_receiveDateTime"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/receiveDateTime" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>