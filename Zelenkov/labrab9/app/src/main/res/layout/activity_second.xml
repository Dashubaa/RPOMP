<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <Button
            android:id="@+id/authorButton"
            android:layout_width="157dp"
            android:layout_height="wrap_content"
            android:text="Нажимает Зеленков"
            tools:ignore="MissingConstraints" />


        <TextView
            android:id="@+id/overlayTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Зеленков К. И."
            android:textColor="#000000"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="197dp"
            tools:layout_editor_absoluteY="0dp"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/authorImageView"
            android:layout_width="119dp"
            android:layout_height="28dp"
            android:contentDescription="Разработал Фамилия"
            android:src="@drawable/myimage"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="48dp" /></LinearLayout>

    <!-- Добавленная кнопка "назад" -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="?android:attr/selectableItemBackground"
        android:contentDescription="@string/back_button"
        android:src="@drawable/ic_back_arrow"
        android:onClick="onClickerdBtnBack"
    />

    <ListView
        android:id="@+id/listViewFav"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btnBack"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">
    </ListView>

</RelativeLayout>