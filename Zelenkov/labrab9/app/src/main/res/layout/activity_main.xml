<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnFav"
        android:layout_width="335dp"
        android:layout_height="58dp"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="32dp"
        android:onClick="clickOpenFav"
        android:text="Your cart"
        android:textColorHighlight="#205132"
        android:textColorLink="#386E1B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

    </Button>

    <ListView
        android:id="@+id/lvSecond"
        android:layout_width="match_parent"
        android:layout_height="569dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toTopOf="@+id/btnFav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <Button
            android:id="@+id/authorButton"
            android:layout_width="157dp"
            android:layout_height="wrap_content"
            android:text="Нажимает Зеленков"
            tools:ignore="MissingConstraints" />


        <TextView
            android:id="@+id/overlayTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Зеленков К. И."
            android:textColor="#000000"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="197dp"
            tools:layout_editor_absoluteY="0dp"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/authorImageView"
            android:layout_width="119dp"
            android:layout_height="28dp"
            android:contentDescription="Разработал Фамилия"
            android:src="@drawable/myimage"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="48dp" /></LinearLayout>


    <TextView
        android:id="@+id/textView2"
        android:layout_width="191dp"
        android:layout_height="22dp"
        android:layout_marginStart="110dp"
        android:layout_marginEnd="110dp"
        android:layout_marginBottom="9dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="made by Kostya"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnFav" />
</androidx.constraintlayout.widget.ConstraintLayout>