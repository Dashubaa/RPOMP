<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/overlayTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Зеленков К. И."
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_centerInParent="true"
            />


        <Button
            android:id="@+id/authorButton"
            android:layout_width="129dp"
            android:layout_height="wrap_content"
            android:text="Нажимает Зеленков К. И." />


        <ImageView
            android:id="@+id/authorImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Р Р°Р·СЂР°Р±РѕС‚Р°Р» Р¤Р°РјРёР»РёСЏ"
            android:src="@drawable/myimage" />


        <Button
            android:id="@+id/btnLoadData"
            android:layout_width="129dp"
            android:layout_height="84dp"
            android:text="Загрузить данные"
            android:layout_marginTop="100dp"/>

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="match_parent"
            android:layout_height="99dp"
            android:layout_marginTop="16dp"
            android:onClick="deleteClicked"
            android:text="Удалить данные" />

    </LinearLayout>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toStartOf="@id/buttonLayout"
        android:layout_marginEnd="16dp"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="invisible" />


</RelativeLayout>